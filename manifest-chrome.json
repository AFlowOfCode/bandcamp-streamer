{
    "name": "Bandcamp Streamer",
    "version": "1.0.4",
    "description": "Continuously stream from Bandcamp fan feed, collection, & wishlist pages without having to click play over and over, shuffle your own collection, + other cool features.",
    "permissions": ["activeTab", "declarativeContent"],
    "content_scripts": [
        {
            "matches": [
                "https://bandcamp.com/*/feed",
                "https://bandcamp.com/*",
                "https://*.bandcamp.com/*"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "inject.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "contentScript.js"
    ],
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "manifest_version": 2
  }